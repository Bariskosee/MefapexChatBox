# 🐳 Docker Production Environment - PostgreSQL Only
# ==================================================

# 🚀 Application Environment
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# 🔐 Security Configuration
SECRET_KEY=mefapex-docker-production-2025-change-this-key-immediately
CORS_ORIGINS=http://localhost:3000,http://localhost:8000,https://yourdomain.com
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com

# 🗄️ PostgreSQL Database Configuration (Docker)
# ==============================================
DATABASE_TYPE=postgresql
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=mefapex
POSTGRES_PASSWORD=mefapex_docker_secure_2025
POSTGRES_DB=mefapex_chatbot

# 🤖 AI Configuration
# ==================
USE_OPENAI=false
OPENAI_API_KEY=your_openai_api_key_if_needed
USE_HUGGINGFACE=true
HUGGINGFACE_CACHE_DIR=./models_cache

# 🗂️ Vector Database (Qdrant)
# ===========================
QDRANT_HOST=qdrant
QDRANT_PORT=6333
QDRANT_COLLECTION_NAME=mefapex_knowledge

# 🌐 Application Settings
# ======================
APP_PORT=8000
WORKERS=2

# 🔄 Performance & Caching (Redis)
# ================================
REDIS_HOST=redis
REDIS_PORT=6379
CACHE_TTL=3600

# 📊 Rate Limiting
# ===============
RATE_LIMIT_REQUESTS=200
RATE_LIMIT_CHAT=100

# 📝 Logging
# ==========
LOG_LEVEL=INFO
LOG_FILE=./logs/mefapex.log

# 🚫 Legacy Support Removed
# =========================
# MySQL support completely removed
# SQLite support completely removed  
# Only PostgreSQL supported in this Docker setup
