# 🚀 MefapexChatBox Production Environment Variables

# 🏗️ APPLICATION SETTINGS
ENVIRONMENT=production
DEBUG=false
SECRET_KEY=your-super-secret-key-change-this-in-production

# 🗄️ DATABASE CONFIGURATION
DATABASE_URL=sqlite:///./data/mefapex.db
QDRANT_HOST=qdrant
QDRANT_PORT=6333

# 🗂️ CACHE CONFIGURATION
REDIS_HOST=redis
REDIS_PORT=6379
CACHE_TTL=3600

# 🤖 AI CONFIGURATION
USE_OPENAI=false
USE_HUGGINGFACE=true
OPENAI_API_KEY=your-openai-api-key-here
HUGGINGFACE_TOKEN=your-huggingface-token-here

# 🌐 CORS CONFIGURATION
CORS_ORIGINS=http://localhost:3000,http://localhost:8000,http://localhost

# 🔒 SECURITY SETTINGS
ALLOWED_HOSTS=localhost,127.0.0.1,mefapex-app
RATE_LIMIT_PER_MINUTE=60
JWT_EXPIRY_HOURS=24

# 📊 MONITORING
ENABLE_METRICS=true
LOG_LEVEL=INFO
SENTRY_DSN=your-sentry-dsn-here

# 🚀 PERFORMANCE SETTINGS
WORKERS=2
MAX_CONNECTIONS=100
TIMEOUT=30

# 📁 FILE PATHS
MODELS_CACHE_PATH=./models_cache
LOGS_PATH=./logs
DATA_PATH=./data
