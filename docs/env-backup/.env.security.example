# üîí MEFAPEX Security Configuration Example
# Copy this file to .env and configure for your environment

# üîê ENVIRONMENT SETTINGS
ENVIRONMENT=production
DEBUG=false

# üîë SECRET KEYS (MUST BE CHANGED IN PRODUCTION)
SECRET_KEY=your-very-long-and-secure-secret-key-change-this-immediately
JWT_SECRET_KEY=another-very-secure-jwt-secret-key

# üö® DEMO USER SETTINGS (DISABLE IN PRODUCTION)
DEMO_USER_ENABLED=false
FORCE_DEMO_IN_PRODUCTION=false
DEMO_PASSWORD=your-secure-demo-password-not-1234
ACCEPT_WEAK_DEMO_PASSWORD=false

# üõ°Ô∏è PASSWORD POLICY
MIN_PASSWORD_LENGTH=12
REQUIRE_UPPERCASE=true
REQUIRE_LOWERCASE=true
REQUIRE_NUMBERS=true
REQUIRE_SPECIAL_CHARS=true

# üìè INPUT VALIDATION
MAX_MESSAGE_LENGTH=2000
MIN_MESSAGE_LENGTH=2
MAX_USERNAME_LENGTH=50
MIN_USERNAME_LENGTH=3

# üö¶ RATE LIMITING
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_CHAT=50
MAX_LOGIN_ATTEMPTS=3
BLOCK_DURATION_MINUTES=30

# üîê JWT SETTINGS
ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_ALGORITHM=HS256

# üåê CORS SETTINGS (NO WILDCARDS IN PRODUCTION)
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# üîí HTTPS ENFORCEMENT
FORCE_HTTPS=true

# ü§ñ AI SERVICE SETTINGS
USE_OPENAI=true
USE_HUGGINGFACE=false
OPENAI_API_KEY=your-openai-api-key

# üóÑÔ∏è DATABASE SETTINGS
DATABASE_PATH=./secure_mefapex.db

# üì° QDRANT SETTINGS
QDRANT_HOST=localhost
QDRANT_PORT=6333

# üìù LOGGING SETTINGS
LOG_LEVEL=WARNING
LOG_FILE=/var/log/mefapex/app.log

# üîç SECURITY MONITORING
ENABLE_SECURITY_MONITORING=true
SECURITY_LOG_FILE=/var/log/mefapex/security.log
