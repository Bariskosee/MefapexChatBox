# 🗄️ MEFAPEX PostgreSQL Configuration
# ===================================
# Copy this file to .env and configure with your actual values

# 🚀 Application Environment
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# 🔐 Security Configuration
SECRET_KEY=your-super-secure-secret-key-change-this-immediately-for-production-use-at-least-32-characters
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# 🗄️ PostgreSQL Database Configuration
# ====================================
DATABASE_TYPE=postgresql
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=mefapex
POSTGRES_PASSWORD=your_very_secure_postgres_password_here
POSTGRES_DB=mefapex_chatbot

# Alternative: Full PostgreSQL URL (overrides individual settings)
# DATABASE_URL=postgresql://mefapex:your_password@localhost:5432/mefapex_chatbot

# 🤖 AI Configuration
# ==================

# OpenAI Configuration
USE_OPENAI=false
OPENAI_API_KEY=your_openai_api_key_here

# Hugging Face Configuration
USE_HUGGINGFACE=true
HUGGINGFACE_CACHE_DIR=./models_cache

# 🗂️ Vector Database (Qdrant)
# ===========================
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_COLLECTION_NAME=mefapex_knowledge

# 🌐 Application Settings
# ======================
APP_PORT=8000
WORKERS=4

# 🔄 Performance & Caching
# ========================
REDIS_HOST=localhost
REDIS_PORT=6379
CACHE_TTL=3600

# 📊 Rate Limiting
# ===============
RATE_LIMIT_REQUESTS=200
RATE_LIMIT_CHAT=100

# 📝 Logging
# ==========
LOG_LEVEL=INFO
LOG_FILE=./logs/mefapex.log

# 🚫 Features Disabled
# ====================
# MySQL support has been removed
# SQLite support has been removed (production databases only)
