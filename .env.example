# ===========================================
# üîß MEFAPEX Chatbot Environment Variables
# ===========================================
# Copy this file to .env and fill in your values

# ===========================================
# üåç Application Environment
# ===========================================
ENVIRONMENT=development
DEBUG=true
APP_PORT=8000

# ===========================================
# üîë Security Configuration
# ===========================================
SECRET_KEY=your-secret-key-here
DEMO_PASSWORD=1234
DEMO_USER_ENABLED=true
FORCE_DEMO_IN_PRODUCTION=false

# Password Requirements
MIN_PASSWORD_LENGTH=8
MAX_PASSWORD_LENGTH=128
REQUIRE_UPPERCASE=true
REQUIRE_LOWERCASE=true
REQUIRE_NUMBERS=true
REQUIRE_SPECIAL_CHARS=true

# Message & Username Limits
MAX_MESSAGE_LENGTH=1000
MIN_MESSAGE_LENGTH=2
MAX_USERNAME_LENGTH=50
MIN_USERNAME_LENGTH=3

# Authentication
ACCESS_TOKEN_EXPIRE_MINUTES=30
MAX_LOGIN_ATTEMPTS=5
BLOCK_DURATION_MINUTES=15

# ===========================================
# üö¶ Rate Limiting
# ===========================================
RATE_LIMIT_REQUESTS=200
RATE_LIMIT_CHAT=100

# ===========================================
# üåê CORS Configuration
# ===========================================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# ===========================================
# üóÑÔ∏è Database Configuration
# ===========================================
DATABASE_TYPE=postgresql
DATABASE_URL=

# PostgreSQL Settings
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=mefapex
POSTGRES_PASSWORD=mefapex_secure_password
POSTGRES_DB=mefapex_chatbot

# MySQL Settings (for migration)
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=
MYSQL_DATABASE=mefapex_chatbot

# ===========================================
# ü§ñ AI Model Configuration
# ===========================================
USE_OPENAI=false
USE_HUGGINGFACE=true
OPENAI_API_KEY=

# Hugging Face Models
SENTENCE_MODEL=all-MiniLM-L6-v2
HUGGINGFACE_MODEL=microsoft/DialoGPT-small

# ===========================================
# üîç Vector Database (Qdrant)
# ===========================================
QDRANT_HOST=localhost
QDRANT_PORT=6333

# ===========================================
# üìä Redis Cache
# ===========================================
REDIS_HOST=localhost
REDIS_PORT=6379

# ===========================================
# üìù Logging Configuration
# ===========================================
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# ===========================================
# üê≥ Docker Configuration
# ===========================================
# These are primarily used in docker-compose.yml
COMPOSE_PROJECT_NAME=mefapex-chatbox

# ===========================================
# üìà Monitoring (Production)
# ===========================================
PROMETHEUS_PORT=9090

# ===========================================
# üåê Production Settings
# ===========================================
# SSL/HTTPS Configuration
SSL_CERT_PATH=
SSL_KEY_PATH=
DOMAIN_NAME=

# CDN/Static Files
STATIC_URL=/static/
MEDIA_URL=/media/

# ===========================================
# üìß Email Configuration (Future Use)
# ===========================================
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_USE_TLS=true

# ===========================================
# üîß Advanced Configuration
# ===========================================
# Worker Processes
WORKERS=1
WORKER_CONNECTIONS=1000

# Cache Settings
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# File Upload Limits
MAX_UPLOAD_SIZE=10485760  # 10MB
ALLOWED_FILE_TYPES=txt,pdf,doc,docx

# Session Configuration
SESSION_TIMEOUT=1800  # 30 minutes
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTPONLY=true

# ===========================================
# üß™ Development/Testing
# ===========================================
TESTING=false
TEST_DATABASE_URL=
MOCK_EXTERNAL_APIS=false